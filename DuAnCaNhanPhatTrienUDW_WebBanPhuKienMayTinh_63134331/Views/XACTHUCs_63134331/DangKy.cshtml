@model DuAnCaNhanPhatTrienUDW_WebBanPhuKienMayTinh_63134331.Models.KHACHHANG
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.2);
    }

    .form-control:focus {
        box-shadow: none;
    }

    .invalid-feedback {
        display: none;
        color: red;
    }

    .form-control:invalid {
        border-color: red;
    }

        .form-control:invalid + .invalid-feedback {
            display: block;
        }
</style>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4">Đăng ký tài khoản</h3>
                    @using (Html.BeginForm("DangKy", "XACTHUCs_63134331", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            Họ và tên @Html.EditorFor(model => model.HOTENKH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                        <div class="mb-3">
                            Địa chỉ  @Html.EditorFor(model => model.DIACHIKH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                        </div>
                        <div class="mb-3">
                            Số điện thoại  @Html.EditorFor(model => model.SDTKH, new { htmlAttributes = new { @class = "form-control", @placeholder = "Dùng để đăng nhập", @required = "required", @id = "SDTKHInput" } })
                        </div>

                        <script>
                            document.getElementById("SDTKHInput").addEventListener("input", function () {
                                var inputValue = this.value;
                                if (inputValue.length !== 10) {
                                    this.setCustomValidity("Số điện thoại phải có độ dài là 10 ký tự.");
                                } else {
                                    this.setCustomValidity("");
                                }
                            });
                        </script>

                        <div class="mb-3">
                            Email  @Html.EditorFor(model => model.EMAILKH, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhận khuyến mãi", @required = "required", type = "email" } })
                            @Html.ValidationMessageFor(model => model.EMAILKH, "", new { @class = "text-danger" })
                        </div>
                        <div class="mb-3">
                            Mật khẩu  @Html.EditorFor(model => model.PASSKH, new { htmlAttributes = new { @class = "form-control", @required = "required", type = "password" } })
                        </div>

                        <div class="row" style="margin:auto"><button type="submit" class="btn btn-danger" style="height: 45px; min-width: 200px; font-size:20px; text-align:center;margin:auto">Đăng ký</button></div>
                        <div style="color: red">@ViewBag.Error</div>
                    }
                    <div class="mt-3 text-center">
                        Đã có tài khoản? <a href="@Url.Action("DangNhap", "XACTHUCs_63134331")">Đăng nhập ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

