
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.2);
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border: none;
        border-radius: 5px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }


    .text-decoration-none {
        text-decoration: none;
        color: #3b5998;
    }
</style>


@using (Html.BeginForm("DangNhap", "XACTHUCs_63134331", FormMethod.Post))
{

    <div class="container pb-5">
        <div class="row">
            <div class="col-md-6 mx-auto mt-5">
                <div class="card">
                    <div class="card-body">
                        <h3 class="text-center mb-4">Đăng nhập</h3>
                        <form>
                            <div class="form-group mb-3">
                                <label for="username">Tên đăng nhập:</label>
                                <input type="text"
                                       name="username"
                                       class="form-control"
                                       autocomplete="off"
                                       placeholder="Nhập tên đăng nhập" />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Mật khẩu:</label>
                                <input type="password"
                                       name="password"
                                       class="form-control"
                                       autocomplete="off"
                                       placeholder="Nhập mật khẩu" />
                            </div>
                            <div style="color: red">@ViewBag.Error</div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-danger" style="height:45px;min-width:200px;font-size:20px">Đăng nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


