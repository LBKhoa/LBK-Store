            </div>
        </div>

        <div class="form-group">
            File chi tiết bài viết (html)
            <div class="col-md-5">
                <input type="file" value="Chọn File" id="HTML" name="HTML" class="btn btn-default" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

