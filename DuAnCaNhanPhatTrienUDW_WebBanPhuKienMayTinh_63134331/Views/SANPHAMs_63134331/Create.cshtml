@model DuAnCaNhanPhatTrienUDW_WebBanPhuKienMayTinh_63134331.Models.SANPHAM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm </h2>

@using (Html.BeginForm("Create", "SANPHAMs_63134331", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.DisplayFor(model => model.IDSP)

        <div class="form-group">
            Tên sản phẩm         <div class="col-md-10">
                @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Ảnh sản phẩm
            <div class="col-md-5">
                <input type="file" value="Chọn File" id="IMG" name="IMG" class="btn btn-default" required />
            </div>
        </div>

        <div class="form-group">
            Giá 1 sản phẩm 
            <div class="col-md-10">
                @Html.EditorFor(model => model.GIASP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GIASP, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Số lượng             
            <div class="col-md-10">
                @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Thời hạn bảo hành
            <div class="col-md-10">
                @Html.EditorFor(model => model.BH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BH, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            File chi tiết về sản phẩm (html)
            <div class="col-md-5">
                <input type="file" value="Chọn File" id="HTML" name="HTML" class="btn btn-default" required />
            </div>
        </div>

        <div class="form-group">
            Nhà cung cấp
            <div class="col-md-10">
                @Html.DropDownList("IDNCC", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDNCC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Loại sản phẩm
            <div class="col-md-10">
                @Html.DropDownList("IDLSP", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDLSP, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo " class="btn btn-primary" /> |   @Html.ActionLink("Trở lại", "Index")

            </div>
        </div>
    </div>
}